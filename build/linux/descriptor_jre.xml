<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>linux-${project.arch}-jre</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>spin-tools</baseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <files>
        <file><source>build/linux/app16.png</source><outputDirectory>lib</outputDirectory></file>
        <file><source>build/linux/app32.png</source><outputDirectory>lib</outputDirectory></file>
        <file><source>build/linux/app48.png</source><outputDirectory>lib</outputDirectory></file>
        <file><source>build/linux/app64.png</source><outputDirectory>lib</outputDirectory></file>
        <file><source>build/linux/desktop.template</source><outputDirectory>lib</outputDirectory></file>
        <file><source>build/linux/spinc</source><fileMode>755</fileMode></file>
        <file><source>build/linux/spinide</source><fileMode>755</fileMode></file>
        <file><source>build/linux/spinide.png</source></file>
        <file><source>build/linux/install.sh</source><fileMode>755</fileMode></file>
        <file><source>build/linux/uninstall.sh</source><fileMode>755</fileMode></file>
        <file><source>LICENSE</source></file>
    </files>
    <fileSets>
        <fileSet>
            <directory>examples</directory>
            <excludes>
                <exclude>**/*.binary</exclude>
            </excludes>
            <outputDirectory>examples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>library</directory>
            <excludes>
                <exclude>**/*.binary</exclude>
            </excludes>
            <outputDirectory>library</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>build/target/maven-jlink/default</directory>
            <outputDirectory>java</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
